generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  createdAt DateTime @default(now())
  audits    Audit[]
}

model Audit {
  id          String      @id @default(cuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id])
  projectName String
  projectUrl  String?
  status      AuditStatus @default(IN_PROGRESS)
  score       Int?
  reportUrl   String?
  createdAt   DateTime    @default(now())
  completedAt DateTime?
  responses   Response[]
}

model Response {
  id         String  @id @default(cuid())
  auditId    String
  audit      Audit   @relation(fields: [auditId], references: [id])
  owaspId    String
  question   String
  answer     String
  aiAnalysis String?

  @@index([auditId])
}

enum AuditStatus {
  IN_PROGRESS
  COMPLETED
  REPORT_GENERATED
}
